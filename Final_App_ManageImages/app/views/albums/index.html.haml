.listing-album 
  %h1 #{I18n.t('listing_album')}

  %table.table.table-hover.table-responsive.show-empty-cells
    %thead

      %tr
        %th #{I18n.t('name')}
        %th #{I18n.t('description')}
        %th #{I18n.t('public')}
        %th
        %th
        %th
        %thead

    %tbody
      - @albums.each do |album|
        %tr
          %td= album.name
          %td= album.description
          %td= album.is_public
          %td= link_to t('.show'), album, class: "btn btn-success"
          %td= link_to t('.edit'), edit_album_path(album), class: "btn btn-info"
          %td= link_to t('.destroy'), album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"

  %br
.wraping-new-cancel
  = link_to t('.new_album'), new_album_path, class: "btn btn-info"
  = link_to t('.cancel'), pictures_path, class: "btn btn-info"
