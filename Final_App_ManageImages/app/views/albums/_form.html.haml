

= form_for(@album, html: {multipart: true}) do |f|
	= f.label I18n.t('image')
	= f.file_field :image, class: "btn", type: :file, multiple: true

	= f.label I18n.t('name abums')
	= f.text_area :name, class: "form-control"
	<br>

	= f.label I18n.t('description')
	= f.text_area :description, class: "form-control"
	<br>

	= f.check_box :is_public
	= f.label I18n.t('public album')
	<br>
	<br>
	= f.submit I18n.t('submit') , class: "btn btn-info"